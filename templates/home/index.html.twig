{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}
{% block body %}
    <main>
        <div class="row my-4">
            <div class="col my-10" >
                <h1 font-size="3.3rem" margin-bottom="8px" color="#8b4513">Your prefer store en ligne</h1>
                <p>Stay connected, stay fit, and stay informed with our Smart Watch - Your ultimate companion for a smarter lifestyle.</p>
                <img src="{{asset('images/slider-img.png')}}" width="100%" height="300px" alt="">
            </div>
            <div class="col">
                <img src="{{asset('images/airpods.png')}}" width="100%" height="100%" alt="">
            </div>
        </div>
    </main>


<div class="row my-7">
    <div calss="col-md-12">
        <div class="my-3 d-flex justify-content-between align-items-center">
            <button type="button" class="btn btn-dark position-relative">
                Products
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                  {{products|length}}
                  <span class="visually-hidden">products</span>
                </span>
            </button>
            <div>
                <a href="{{path('home')}}" class="btn btn-sm btn-outline-dark mx-1">
                    All
                  </a>
                  {% for category in categories %}
                  <a href="{{path('product_category',{category: category.id})}}" class="btn btn-sm btn-outline-dark mx-1">
                    {{category.name}}
                  </a>
                  {% endfor %}
            </div>     
        </div>
        <div class="row">
            {% if products|length %}
                {% for product in products %}
                   <div class="col-md-4 my-4">
                        <div class="card" style="width: 16rem;height: 100%">
                            {% if product.image %}
                                <img src="{{photo_url~product.image}}"
                                alt="product_image" 
                                class="card-img-top">                                                
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{product.name}}</h5>
                                <p class="card-text">{{product.description}}</p>
                                <h5><span class="text text-danger">{{product.price}}Dhs</span></h5>
                                <a href="{{path('product_show',{id: product.id})}}" class="btn btn-sm btn-primary" >
                                    more details
                                </a>
                            </div>
                        </div>
                   </div>
                {% endfor %}
            {% else %}
                   <div class="alert alert-info">
                        No existing products!!
                   </div>
            {% endif %}
          </div>
    </div>    
</div>
{% endblock %}
