{% extends 'base.html.twig' %}

{% block title %}
    {{product.name}}
{% endblock %}

{% block body %}
<div class="row my-5">
    <div calss="col-md-12">
        <div class="my-3 d-flex justify-content-start align-items-center">
                <a href="{{path('order_store',{id: product.id})}}" class="btn btn-sm btn-outline-dark mx-1">
                    Buy now
                  </a>    
        </div>
        <div class="row">
            {% if product %}
                   <div class="col-md-8">
                        <div class="card">
                            {% if product.image %}
                                <img src="{{photo_url~product.image}}"
                                alt="product_image" 
                                height="400"
                                width="600"
                                class="card-img-top">                                                
                            {% endif %}
                        </div>
                   </div>
                   <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{product.name}}</h5>
                                <p class="card-text">{{product.description}}</p>
                                <h5><span class="text text-danger">{{product.price}}Dhs</span></h5>
                                <h5><span class="text text-success">{{product.category.name}}</span></h5>
                            </div>
                        </div>
                   </div>
            {% else %}
                   <div class="alert alert-info">
                        No existing products!!
                   </div>
            {% endif %}
          </div>
    </div>    
</div>


{% endblock %}
